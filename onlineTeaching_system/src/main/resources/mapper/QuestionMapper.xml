    <select id="selectQuestionByQid" resultMap="BaseResultMap1" parameterType="java.lang.Integer">
   SELECT
        question.q_id,
        question.q_title,
        question.q_info,
        question.q_time,
        question.s_id,
        question.t_id,
        question.q_answer,
        question.c_id,
        student.s_name,
        teacher.t_name
